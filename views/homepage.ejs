<html lang="en">
<head>
<meta charset="UTF-8">
<title>Facebook</title>
<base href="/">

<!-- JS -->
<script src="libs/angular/angular.min.js"></script>
<script src="libs/angular-route/angular-route.min.js"></script>


<!-- ANGULAR CUSTOM -->

<script src="js/app.js"></script>
<script src="js/controllers/SearchController.js"></script>
<script src="js/controllers/SidebarController.js"></script>
<script src="js/controllers/ProfileController.js"></script>

<link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
<link rel="stylesheet" type="text/css" href="css/style.css" />
</head>

<body ng-app = "facebook" ng-controller="ProfileController" ng-init= "postsByFriends();" class="bkground_color">
	<div  >
	<header class="bgimage_1">
	<div class="container-fluid" >
		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-1">
				<a href="/homepage"> <img src="../images/facebookLogo1.png"
					alt="logo"
					style="margin-left: 50px; width: 40px; height: 40px; margin-top: 15px;"></img>
				</a>
			</div>
			<div class="col-md-1"></div>
			<div class="col-md-5">
				<form class="navbar-form navbar-left" role="search">
					<input type="text" class="form-control" placeholder="Search"
						name = "search1" ng-model="search1">
					<!-- 	<preview>
							{{search1}}
						</preview> -->
					<button type="submit" ng-click="searchFunc();" class="btn btn-default">
						<span class="glyphicon glyphicon-search"></span>
					</button>
				</form>
			</div>
							
			<div class="col-md-2">
				<form action="logout" method="post">
					<div style="padding-top: 20px">
						<input type="submit" value="Logout" class="btn btn-success" />
					</div>
				</form>
			</div>
			
			
			
		</div>
	</div>
</header>		
	</div>
		
	<div class="container-fluid">								
		<div class="col-md-2">
		</div>				
		
		<!-- SIDE MENU -->		
		<div class="col-md-2" >
		<div ng-app="facebook" ng-controller = "SidebarController" >
			<div class="profile-sidebar_2">
				<!-- SIDEBAR MENU -->
				<div class="profile-usermenu">
				<hr/>
					<ul class="nav">
						<!-- VIEW MY PROFILE -->
						<li><a href="/userProfile/me"> <i
								class="glyphicon glyphicon-home"></i> Your Profile
						</a></li>
		
						<!-- EDIT MY PROFILE -->
						<li><a href="/editProfile"> <i
								class="glyphicon glyphicon-user"></i> Edit Profile
						</a></li>
		
						<!-- MY GROUPS -->
						<li><a href="/createGroups"> <i
								class="glyphicon glyphicon-ok"></i> Groups
						</a></li>
						<li><a href="#"> <i class="glyphicon glyphicon-flag"></i>
								Help
						</a></li>
					</ul>
				</div>
			<!-- END MENU -->
	</div>
</div>			
		</div>	
				
		<div class="col-md-4" >
			<div ng-app="facebook" ng-controller = "ProfileController">
	<div class="row">
		<div class="profile-content_2">
			<form>
				<div class="form-group">
					<textarea class="form-control input-lg" rows="4" id="comment"
						placeholder="Whats on your mind?" ng-model="postDetails"></textarea>
				</div>
				<div align="center">
					<input class="col-md-3 btn btn-info" value="Share!"
						ng-click="postStatus();"></input>
				</div>
			</form>
		</div>
	</div>
	<br />

	<div class="row">
		<div ng-show="(allFriendsList.length > 0)">
			<h3>Search Results</h3>
			<div class="alert alert-gray col-sm-6"
				ng-repeat="friend in allFriendsList">
				<h4 ng-click="displayAnotherUser(friend._id)">{{friend.firstname}}
					{{friend.lastname}}</h4>
				<img src="../images/avatar.png" alt="logo"
					style="width: 40px; height: 40px;"></img> <input type="submit"
					ng-click="addFriend(friend._id,friend.firstname,friend.lastname);" class="btn btn-success " value="Add Friend">
				{{messageAddFriend}}
			</div>
			<hr>
		</div>
	</div>

	<br /> <br />
	<div class="row">
		<div class="profile-content_2">
			<div class="alert alert-gray" ng-repeat="news in newsFeedList">
				<img src="../images/avatar.png" alt="logo"
					style="width: 40px; height: 40px;"></img> <strong>
					{{news.firstname}} {{news.lastname}}</strong>
				<hr>
				<h4>{{news.details}}</h4>
				<h6>
					<i> {{news.date_posted}}</i>i>
				</h6>
			</div>
		</div>
	</div>
	</div>				
		</div>				
		
		<!-- BLANK COLUMN -->
		<div class="col-md-2">					
		</div>				
		
		<!-- NEWS FEED -->
		<div class="col-md-2"></div>						
		<br> 
		<br>
	</div>
	
	</div>
	</div>	
	
	<!-- BLANK COLUMN -->
	<div class="col-md-2">					
	</div>						
		
	<!-- NEWS FEED -->
	<div class="col-md-2">					
	</div>	
</body>
</html>